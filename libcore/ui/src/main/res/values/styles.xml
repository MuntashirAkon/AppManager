<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeOverlay" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">#99000000</item>
        <item name="android:navigationBarColor">#99000000</item>
    </style>

    <style name="AppTheme" parent="AppThemeOverlay">
        <item name="navigationIcon">@drawable/ic_keyboard_backspace</item>

        <item name="android:colorBackground">?colorSurface</item>

        <!-- Medium title should've been 18sp, not 16 -->
        <item name="textAppearanceTitleMedium">@style/TextAppearance.AppTheme.TitleMedium</item>

        <item name="materialFullScreenAlertDialogTheme">@style/AppTheme</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.BottomSheetDialog</item>
        <item name="checkboxStyle">@style/Widget.AppTheme.CompoundButton.CheckBox</item>
        <item name="chipStyle">@style/Widget.AppTheme.Chip.Assist</item>
        <item name="chipGroupStyle">@style/Widget.AppTheme.ChipGroup</item>
        <item name="chipStandaloneStyle">@style/Widget.AppTheme.Chip.Input</item>
        <item name="floatingActionButtonStyle">@style/Widget.AppTheme.Button.FAB</item>
        <item name="materialAlertViewStyle">@style/Widget.AppTheme.MaterialAlertView</item>
        <item name="materialCalendarTheme">@style/Widget.AppTheme.MaterialCalendar</item>
        <item name="materialCardViewStyle">@style/Widget.AppTheme.CardView.Elevated</item>
        <item name="materialDividerStyle">@style/Widget.AppTheme.Divider</item>
        <item name="materialSwitchStyle">@style/Widget.AppTheme.MaterialSwitch.Large</item>
        <item name="searchViewStyle">@style/Widget.AppTheme.SearchView</item>
        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout</item>
        <item name="materialSpinnerStyle">@style/Widget.AppTheme.MaterialSpinner</item>
        <item name="toolbarStyle">@style/Widget.AppTheme.MaterialToolbar</item>
        <item name="multiSelectionActionsView">@style/Widget.AppTheme.MultiSelectionActionsView</item>

        <!-- Preferences -->
        <item name="preferenceStyle">@style/Preference.M3</item>
        <item name="alertPreferenceStyle">@style/Preference.M3.Alert</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.M3.CheckBoxPreference</item>
        <item name="dialogPreferenceStyle">@style/Preference.M3.DialogPreference</item>
        <item name="primaryButtonPreferenceStyle">@style/Preference.M3.ButtonPreference.Primary</item>
        <item name="topSwitchPreferenceStyle">@style/Preference.M3.TopSwitchPreference</item>

        <item name="dropdownPreferenceStyle">@style/Preference.DropDown.Material</item>

        <item name="editTextPreferenceStyle">@style/Preference.M3.DialogPreference.EditTextPreference</item>
        <item name="preferenceCategoryStyle">@style/Preference.M3.Category</item>
        <item name="preferenceCategoryTitleTextAppearance">?attr/textAppearanceLabelLarge</item>
        <item name="preferenceCategoryTitleTextColor">?attr/colorPrimary</item>

        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.Material</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList.Material</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.Material</item>

        <item name="preferenceScreenStyle">@style/Preference.M3.PreferenceScreen</item>

        <item name="seekBarPreferenceStyle">@style/Preference.SeekBarPreference.Material</item>

        <item name="switchPreferenceStyle">@style/Preference.M3.SwitchPreference</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.M3.SwitchPreferenceCompat</item>

        <!-- List items -->
        <item name="android:textAppearanceListItem">?attr/textAppearanceTitleMedium</item>
        <item name="android:textAppearanceListItemSecondary">@style/TextAppearance.AppTheme.BodyMedium.Secondary</item>
        <item name="listItemMarginVertical">1dp</item>
        <item name="listItemMarginHorizontal">@dimen/padding_small</item>
        <item name="listItemPaddingVertical">@dimen/padding_small</item>
        <item name="listItemPaddingHorizontal">?android:attr/listPreferredItemPaddingStart</item>
        <item name="listItemCornerRadius">24dp</item>
        <item name="listItemIndicatorWidth">9dp</item>

        <!-- Dialog -->
        <item name="materialAlertDialogListItemTextStyle">@style/MaterialAlertDialog.Material3.Body.Text.Large</item>

        <!-- Popup Menu -->
        <item name="popupMenuStyle">@style/Widget.AppTheme.PopupMenu</item>
        <item name="listPopupWindowStyle">@style/Widget.AppTheme.PopupMenu.ListPopupWindow</item>
        <item name="android:contextPopupMenuStyle" tools:targetApi="N">
            @style/Widget.AppTheme.PopupMenu.ContextMenu
        </item>
        <item name="actionOverflowButtonStyle">@style/Widget.AppTheme.PopupMenu.OverflowButton</item>
        <item name="actionOverflowMenuStyle">@style/Widget.AppTheme.PopupMenu.Overflow</item>
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>
        <item name="listChoiceBackgroundIndicator">@drawable/popup_menu_item_background</item>
        <item name="android:dropDownListViewStyle">@style/Widget.AppTheme.PopupMenu.DropDown</item>

        <!-- Misc -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme">
        <item name="materialFullScreenAlertDialogTheme">@style/AppTheme.Black</item>
    </style>

    <style name="AppTheme.TransparentBackground" parent="AppTheme">
        <item name="android:background">@null</item>
        <item name="background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TransparentBackground.Black" parent="AppTheme.TransparentBackground">
        <item name="materialFullScreenAlertDialogTheme">@style/AppTheme.Black</item>
    </style>

    <!-- Animation for full-screen alert dialog -->
    <style name="AppTheme.FullScreenDialog.Animation" parent="">
        <item name="android:windowEnterAnimation">@anim/fullscreen_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/fullscreen_dialog_exit</item>
    </style>

    <!-- MaterialSpinner -->
    <style name="Widget.AppTheme.MaterialSpinner" parent="Widget.AppTheme.TextInputLayout.ExposedDropdownMenu" />

    <style name="Widget.AppTheme.MaterialSpinner.Small" parent="Widget.AppTheme.TextInputLayout.ExposedDropdownMenu.Small" />

    <style name="Widget.AppTheme.MaterialSpinner.Spinner" parent="Widget.AppTheme.MaterialSpinner">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.MaterialSpinner</item>
    </style>

    <style name="Widget.AppTheme.MaterialSpinner.Spinner.Small" parent="Widget.AppTheme.MaterialSpinner.Small">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.MaterialSpinner.Small</item>
    </style>

    <style name="ThemeOverlay.AppTheme.MaterialSpinner" parent="">
        <item name="autoCompleteTextViewStyle">@style/Widget.AppTheme.MaterialSpinner.AutoCompleteTextView</item>
    </style>

    <style name="ThemeOverlay.AppTheme.MaterialSpinner.Small" parent="">
        <item name="autoCompleteTextViewStyle">@style/Widget.AppTheme.MaterialSpinner.AutoCompleteTextView.Small</item>
        <item name="endIconMinSize">18dp</item> <!-- 34 - 8*2 -->
    </style>

    <style name="Widget.AppTheme.MaterialSpinner.AutoCompleteTextView" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="simpleItemLayout">@layout/auto_complete_dropdown_item</item>
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>
    </style>

    <style name="Widget.AppTheme.MaterialSpinner.AutoCompleteTextView.Small" parent="Widget.AppTheme.AutoCompleteTextView">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">34dp</item>
    </style>

    <!-- MaterialAlertDialog -->
    <style name="MaterialAlertDialog.Material3.Body.Text.Large" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>

    <!-- BottomSheetDialog -->
    <style name="AppTheme.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheetModal</item>
    </style>

    <style name="AppTheme.BottomSheetModal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.AppTheme.MediumComponent.RoundedTop</item>
    </style>

    <style name="AppTheme.BottomSheetAnimation" parent="">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_down</item>
    </style>

    <!-- CheckBox -->
    <style name="Widget.AppTheme.CompoundButton.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.BodySmall</item>
    </style>

    <!-- Chip -->
    <style name="Widget.AppTheme.Chip.Assist" parent="Widget.Material3.Chip.Assist">
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">24dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.BodySmall</item>
    </style>

    <style name="Widget.AppTheme.Chip.Assist.Elevated" parent="Widget.Material3.Chip.Assist.Elevated">
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">24dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.BodySmall</item>
    </style>

    <style name="Widget.AppTheme.Chip.Assist.Elevated.Padded" parent="Widget.AppTheme.Chip.Assist.Elevated">
        <!-- Fix margin issue -->
        <item name="android:layout_marginTop">@dimen/padding_very_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_very_small</item>
        <item name="android:layout_marginStart">@dimen/padding_very_small</item>
        <item name="android:layout_marginEnd">@dimen/padding_very_small</item>
    </style>

    <style name="Widget.AppTheme.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">24dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.BodySmall</item>
    </style>

    <style name="Widget.AppTheme.Chip.Input" parent="Widget.Material3.Chip.Input.Elevated">
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">24dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.BodySmall</item>
    </style>

    <style name="Widget.AppTheme.Chip.Suggestion" parent="Widget.Material3.Chip.Suggestion.Elevated">
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">24dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.BodySmall</item>
    </style>

    <!-- ChipGroup -->
    <style name="Widget.AppTheme.ChipGroup" parent="Widget.Material3.ChipGroup" />

    <style name="Widget.AppTheme.ChipGroup.Assist" parent="Widget.Material3.ChipGroup">
        <!-- chipStyle is set via ChipGroup because the Chip's are generated dynamically -->
        <item name="chipStyle">@style/Widget.AppTheme.Chip.Assist</item>
    </style>

    <style name="Widget.AppTheme.ChipGroup.Assist.Elevated" parent="Widget.Material3.ChipGroup">
        <!-- chipStyle is set via ChipGroup because the Chip's are generated dynamically -->
        <item name="chipStyle">@style/Widget.AppTheme.Chip.Assist.Elevated</item>
    </style>

    <style name="Widget.AppTheme.ChipGroup.Filter" parent="Widget.Material3.ChipGroup">
        <!-- chipStyle is set via ChipGroup because the Chip's are generated dynamically -->
        <item name="chipStyle">@style/Widget.AppTheme.Chip.Filter</item>
    </style>

    <style name="Widget.AppTheme.ChipGroup.Input" parent="Widget.Material3.ChipGroup">
        <!-- chipStyle is set via ChipGroup because the Chip's are generated dynamically -->
        <item name="chipStyle">@style/Widget.AppTheme.Chip.Input</item>
    </style>

    <style name="Widget.AppTheme.ChipGroup.Suggestion" parent="Widget.Material3.ChipGroup">
        <!-- chipStyle is set via ChipGroup because the Chip's are generated dynamically -->
        <item name="chipStyle">@style/Widget.AppTheme.Chip.Suggestion</item>
    </style>

    <!-- MaterialDivider -->
    <style name="Widget.AppTheme.Divider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">?android:attr/colorControlHighlight</item>
    </style>

    <!-- MaterialCardView -->
    <style name="Widget.AppTheme.CardView.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
    </style>

    <style name="Widget.AppTheme.CardView.ListItem" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">?attr/listItemCornerRadius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.AppTheme.CardView.ListItem.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">?attr/listItemCornerRadius</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@macro/m3_comp_elevated_card_container_color</item>
    </style>

    <style name="Widget.AppTheme.CardView.ListItem.Padded" parent="Widget.AppTheme.CardView.ListItem">
        <!-- Fix margin issue -->
        <item name="android:layout_marginTop">@dimen/padding_very_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_very_small</item>
        <item name="android:layout_marginStart">@dimen/padding_small</item>
        <item name="android:layout_marginEnd">@dimen/padding_small</item>
    </style>

    <style name="Widget.AppTheme.CardView.Filled" parent="Widget.Material3.CardView.Filled" />

    <style name="Widget.AppTheme.CardView.Outlined" parent="Widget.Material3.CardView.Outlined" />

    <style name="Widget.AppTheme.CardView.Outlined.DiagonallyRounded" parent="Widget.Material3.CardView.Outlined">
        <item name="shapeAppearance">@style/ShapeAppearance.AppTheme.DiagonallyRounded</item>
    </style>

    <!-- MaterialCalendar -->
    <style name="Widget.AppTheme.MaterialCalendar" parent="ThemeOverlay.Material3.MaterialCalendar">
        <!-- MaterialCalendar doesn't follow the M3-styled dialog -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AppTheme.LargeComponent</item>
    </style>

    <!-- MaterialSwitch -->
    <style name="Widget.AppTheme.MaterialSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <!-- Matches CheckBox -->
        <item name="minHeight">32dp</item>
        <item name="switchPadding">8dp</item>
        <item name="android:thumb">@drawable/mtrl_switch_thumb_medium</item>
        <item name="track">@drawable/mtrl_switch_track_medium</item>
        <item name="trackDecoration">@drawable/mtrl_switch_track_decoration_medium</item>
    </style>

    <style name="Widget.AppTheme.MaterialSwitch.Large" parent="Widget.Material3.CompoundButton.MaterialSwitch" />

    <!-- MaterialToolbar -->
    <style name="Widget.AppTheme.MaterialToolbar" parent="Widget.Material3.Toolbar">
        <item name="subtitleTextAppearance">@style/TextAppearance.AppTheme.BodyMedium</item>
    </style>

    <!-- Menu -->
    <style name="Widget.AppTheme.PopupMenu" parent="Widget.Material3.PopupMenu" />

    <style name="Widget.AppTheme.PopupMenu.ListPopupWindow" parent="Widget.Material3.PopupMenu.ListPopupWindow" />

    <style name="Widget.AppTheme.PopupMenu.ContextMenu" parent="Widget.Material3.PopupMenu.ContextMenu" />

    <style name="Widget.AppTheme.PopupMenu.Overflow" parent="Widget.Material3.PopupMenu.Overflow" />
    <!-- Overflow menu button -->
    <style name="Widget.AppTheme.PopupMenu.OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert</item>
    </style>

    <style name="Widget.AppTheme.PopupMenu.DropDown" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/popup_menu_item_background</item>
    </style>

    <!-- MultiSelectionActionsView -->
    <style name="Widget.AppTheme.MultiSelectionActionsView" parent="android:Widget">
        <item name="android:background">@macro/m3_comp_navigation_bar_container_color</item>
        <item name="backgroundTint">@null</item>
        <item name="elevation">0dp</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceBodyMedium</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceBodyMedium</item>
        <item name="itemIconSize">@dimen/m3_comp_navigation_bar_icon_size</item>
        <item name="itemIconTint">@color/m3_textfield_indicator_text_color</item>
        <item name="itemTextColor">@color/m3_textfield_indicator_text_color</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="itemBackground">@null</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>

    <!-- ProgressIndicator -->
    <style name="Widget.AppTheme.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator" />

    <style name="Widget.AppTheme.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator" />

    <style name="Widget.AppTheme.CircularProgressIndicator.Medium" parent="Widget.Material3.CircularProgressIndicator.Medium" />

    <style name="Widget.AppTheme.CircularProgressIndicator.Small" parent="Widget.Material3.CircularProgressIndicator.Small" />

    <style name="Widget.AppTheme.CircularProgressIndicator.ExtraSmall" parent="Widget.Material3.CircularProgressIndicator.ExtraSmall" />

    <!-- SwipeRefreshLayout -->
    <style name="Widget.AppTheme.SwipeRefreshLayout" parent="android:Widget">
        <item name="progressBackgroundColor">?attr/colorSurface</item>
        <item name="indicatorColor">?attr/colorSecondary</item>
    </style>

    <!-- SearchView -->
    <style name="Widget.AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@null</item>
        <item name="closeIcon">@drawable/mtrl_ic_cancel</item>
        <item name="closeIconTint">@color/m3_textfield_indicator_text_color</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryHint">@android:string/search_go</item>
        <item name="frameMarginHorizontal">8dp</item>
        <item name="android:backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.AppTheme.LargeComponent</item>
        <item name="android:popupBackground">?attr/popupMenuBackground</item>
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>
    </style>

    <style name="Widget.AppTheme.SearchView.Small" parent="Widget.AppTheme.SearchView">
        <item name="frameMarginHorizontal">2dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <!-- MaterialAlertView -->
    <style name="Widget.AppTheme.MaterialAlertView" parent="Widget.AppTheme.TextInputLayout">
        <item name="boxBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="startIconDrawable">@drawable/ic_information</item>
        <item name="startIconTint">?attr/colorOnPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.AppTheme.MediumComponent</item>
    </style>

    <style name="Widget.AppTheme.MaterialAlertView.Warn" parent="Widget.AppTheme.MaterialAlertView">
        <item name="boxBackgroundColor">?attr/colorErrorContainer</item>
        <item name="startIconDrawable">@drawable/ic_caution</item>
        <item name="startIconTint">?attr/colorOnErrorContainer</item>
        <item name="android:textColor">?attr/colorOnErrorContainer</item>
    </style>

    <!-- Preferences -->
    <style name="Preference.M3" parent="Preference.Material">
        <item name="android:layout">@layout/m3_preference</item>
    </style>

    <style name="Preference.M3.Alert" parent="Preference.Material">
        <item name="android:layout">@layout/m3_preference_alert</item>
    </style>

    <style name="Preference.M3.Category" parent="Preference.Category.Material">
        <item name="android:layout">@layout/m3_preference_category</item>
        <item name="allowDividerAbove">false</item>
    </style>

    <style name="Preference.M3.CheckBoxPreference" parent="Preference.CheckBoxPreference.Material">
        <item name="android:layout">@layout/m3_preference</item>
    </style>

    <style name="Preference.M3.DialogPreference" parent="Preference.DialogPreference.Material">
        <item name="android:layout">@layout/m3_preference</item>
    </style>

    <style name="Preference.M3.DialogPreference.EditTextPreference" parent="Preference.DialogPreference.EditTextPreference.Material">
        <item name="android:layout">@layout/m3_preference</item>
    </style>

    <style name="Preference.M3.PreferenceScreen" parent="Preference.PreferenceScreen.Material">
        <item name="android:layout">@layout/m3_preference</item>
    </style>

    <style name="Preference.M3.ButtonPreference.Primary" parent="Preference.Material">
        <item name="android:layout">@layout/m3_preference_button</item>
    </style>

    <style name="Preference.M3.SwitchPreference" parent="Preference.SwitchPreference.Material">
        <item name="android:layout">@layout/m3_preference</item>
    </style>

    <style name="Preference.M3.SwitchPreferenceCompat" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="android:layout">@layout/m3_preference</item>
        <item name="android:widgetLayout">@layout/m3_preference_widget_material_switch</item>
    </style>

    <style name="Preference.M3.TopSwitchPreference" parent="Preference.M3.SwitchPreferenceCompat">
        <item name="android:layout">@layout/m3_preference_top_switch</item>
        <item name="listItemPaddingVertical">@dimen/padding_medium</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.AppTheme.LargeComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputLayout</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout.Small" parent="Widget.AppTheme.TextInputLayout">
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.LabelSmaller</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputLayout.Small</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.AppTheme.LargeComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputLayout</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout.ExposedDropdownMenu.Small" parent="Widget.AppTheme.TextInputLayout.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.LabelSmaller</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputLayout.Small</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputLayout" parent="">
        <item name="autoCompleteTextViewStyle">@style/Widget.AppTheme.AutoCompleteTextView</item>
        <item name="editTextStyle">@style/Widget.AppTheme.TextInputEditText</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputLayout.Small" parent="">
        <item name="autoCompleteTextViewStyle">@style/Widget.AppTheme.AutoCompleteTextView.Small</item>
        <item name="editTextStyle">@style/Widget.AppTheme.TextInputEditText.Small</item>
        <item name="endIconMinSize">18dp</item> <!-- 34 - 8*2 -->
    </style>

    <!-- TextInputEditText -->
    <style name="Widget.AppTheme.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense" />

    <style name="Widget.AppTheme.TextInputEditText.Small" parent="Widget.AppTheme.TextInputEditText">
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
