<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        app:key="custom_locale"
        app:title="@string/pref_app_language"
        tools:summary="Auto"
        app:iconSpaceReserved="false" />

    <Preference
        app:key="app_theme"
        app:title="@string/pref_app_theme"
        tools:summary="Follow system"
        app:iconSpaceReserved="false" />

    <Preference
        app:key="layout_orientation"
        app:title="@string/pref_layout_orientation"
        tools:summary="Left to right"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        app:key="enable_screen_lock"
        app:title="@string/screen_lock"
        app:summary="@string/screen_lock_msg"
        app:iconSpaceReserved="false" />

    <Preference
        app:key="mode_of_operations"
        app:title="@string/pref_mode_of_operations"
        tools:summary="Auto"
        app:iconSpaceReserved="false" />

    <Preference
        app:key="selected_users"
        app:title="@string/pref_selected_users"
        app:summary="@string/pref_selected_users_msg"
        app:iconSpaceReserved="false" />

    <Preference
        app:key="enabled_features"
        app:title="@string/enable_disable_features"
        app:summary="@string/pref_enable_disable_features_msg"
        app:iconSpaceReserved="false" />

    <Preference
        app:key="apk_signing_prefs"
        app:title="@string/apk_signing"
        app:summary="@string/pref_apk_signing_msg"
        android:fragment="io.github.muntashirakon.AppManager.settings.ApkSigningPreferences"
        app:iconSpaceReserved="false" />

    <Preference
        app:key="installer"
        app:title="@string/installer"
        app:summary="@string/pref_installer_msg"
        android:fragment="io.github.muntashirakon.AppManager.settings.InstallerPreferences"
        app:iconSpaceReserved="false" />

    <Preference
        app:key="backup_restore_prefs"
        app:title="@string/backup_restore"
        app:summary="@string/pref_backup_restore_msg"
        android:fragment="io.github.muntashirakon.AppManager.settings.BackupRestorePreferences"
        app:iconSpaceReserved="false" />

    <Preference
        app:key="log_viewer_prefs"
        app:title="@string/log_viewer"
        app:summary="@string/pref_log_viewer_msg"
        android:fragment="io.github.muntashirakon.AppManager.settings.LogViewerPreferences"
        app:iconSpaceReserved="false" />

    <Preference
        app:key="rules_prefs"
        app:title="@string/rules"
        app:summary="@string/pref_rules_msg"
        android:fragment="io.github.muntashirakon.AppManager.settings.RulesPreferences"
        app:iconSpaceReserved="false" />

    <PreferenceCategory
        app:key="other_category"
        app:title="@string/other"
        app:iconSpaceReserved="false" >

        <Preference
            app:key="import_export_keystore"
            app:title="@string/pref_import_export_keystore"
            app:summary="@string/pref_import_export_keystore_msg"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="about_device"
            app:title="@string/about_device"
            app:summary="@string/pref_about_device_msg"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="about"
            app:title="@string/about"
            app:summary="@string/pref_about_msg"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="changelog"
            app:title="@string/changelog"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>