<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/import_from_oab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_small"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/import_from_oab"
                android:textSize="@dimen/title_font" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/import_from_oab_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/import_from_oab_tb_msg"
                android:textSize="@dimen/subtitle_font" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ten_percent_black" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/import_from_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_small"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/import_from_tb"
                android:textSize="@dimen/title_font" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/import_from_tb_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/import_from_oab_tb_msg"
                android:textSize="@dimen/subtitle_font" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
