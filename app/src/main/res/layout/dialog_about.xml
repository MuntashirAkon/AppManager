<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_very_small"
        android:paddingEnd="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_very_small">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <io.github.muntashirakon.widget.HyperlinkTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/copyright_message"
            android:textSize="@dimen/subtitle_font" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/version"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subtitle_font"
            android:textIsSelectable="true"
            tools:text="@tools:sample/lorem[2]" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/license"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <io.github.muntashirakon.widget.HyperlinkTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/license_message"
            android:textSize="@dimen/subtitle_font" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/website"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/website_message"
            android:autoLink="web"
            android:textSize="@dimen/subtitle_font" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/source_code"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/source_code_links"
            android:textSize="@dimen/subtitle_font"
            android:autoLink="web" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/community"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/community_links"
            android:textSize="@dimen/subtitle_font"
            android:autoLink="web" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/third_party"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <io.github.muntashirakon.widget.HyperlinkTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/third_party_message"
            android:textSize="@dimen/subtitle_font" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/credits"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <io.github.muntashirakon.widget.HyperlinkTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/credits_message"
            android:textSize="@dimen/subtitle_font" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
